{% extends 'base.html.twig' %}

{% block title %} Zadanie rekrutacyjne Qpony {% endblock %}
{% block stylesheets %} <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous"> {% endblock %}

{% block body %}
<div class='row'>
    <div class='col-sm-4'>
    {{ form(post_form) }}
    </div>
    <div class='col-sm-8'>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col" class = 'text-center'>Niewiadoma</th>
                    <th scope="col" class = 'text-center'>Max wartość</th>
                </tr>
            </thead>
            <tbody>   
            {% for elementy in tablica %}
                <tr>
                    <td class = 'text-center'>
                        {{ elementy[0] }}
                    </td>
                    <td class = 'text-center'>
                        {{ elementy[1] }}
                    </td>
                </tr>
            {% endfor %}
    </div>
</div>

{% endblock %}
